{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	<h1 class="text-center">Votre panier</h1>
	{% if items %}
		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantit√©</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>{{ item.product.nom }}</td>
						<td>{{ item.product.prix }}$</td>
						<td>{{ item.quantity }}</td>
						<td>{{ item.product.prix * item.quantity }}</td>
						<td>
							<a href="{{ path('cart_add', {id: item.product.id}) }}" class="fa fa-plus-square" style="font-size:24px;color:green">
	
							</a>

						</td>
						<td>
							<a href="{{ path('cart_removeone', {id: item.product.id}) }}" class="fa fa-minus-square" style="font-size:24px;color:red">
								
							</a>

						</td>
						<td>
							<a href="{{ path('cart_remove', {id: item.product.id}) }}" class="fas fa-trash" style="font-size:24px;color:red">
								
							</a>

						</td>

					</tr>

				{% endfor %}

			</tbody>
			<tfoot>
				<tr>
					<td colspan="3" class="text-end">Total :</td>
					<td>{{ total }}</td>
				</tr>
			</tfoot>

		</table>
		<td>
			<a href="{{ path('cart_removeall') }}" class="fas fa-trash" style="font-size:24px;color:red">
				
			</a>

		</td>
		<td>
			<a href="{{ path('cart_paid') }}" class="fas fa-check" style="font-size:36px;color:blue">
				
			</a>

		</td>
	{% else %}
		<p>Votre panier est vide !</p>
	{% endif %}

{% endblock %}
